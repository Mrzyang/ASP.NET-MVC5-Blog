<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Assets/BackEnd/css/common.css" />
    <link rel="stylesheet" type="text/css" href="~/Assets/BackEnd/css/main.css" />
    <script type="text/javascript" src="~/Assets/BackEnd/js/libs/modernizr.min.js"></script>
    <script src="~/Assets/BackEnd/js/jquery-3.2.1.js"></script>
    <script src="~/Assets/BackEnd/js/layer.js"></script>
    <link href="~/Assets/BackEnd/css/layer.css" rel="stylesheet" />
    <script src="~/Content/ueditor/ueditor.config.js"></script>
    <script src="~/Content/ueditor/ueditor.all.min.js"></script>
    <script src="~/Content/ueditor/lang/zh-cn/zh-cn.js"></script>
    <script src="~/Content/ueditor/third-party/SyntaxHighlighter/shCore.js"></script>
    <link href="~/Content/ueditor/third-party/SyntaxHighlighter/shCoreDefault.css" rel="stylesheet" />
</head>
<body>
    <div class="topbar-wrap white">
        <div class="topbar-inner clearfix">
            <div class="topbar-logo-wrap clearfix">
                <h1 class="topbar-logo none"><a href="~/Admin/Index" class="navbar-brand">后台管理</a></h1>
                <ul class="navbar-list clearfix">
                    <li><a class="on" href="~/Admin/Info">首页</a></li>
                    <li><a href="~/Home/Index" target="">网站首页</a></li>
                </ul>
            </div>
            <div class="top-info-wrap">
                <ul class="top-info-list clearfix">
                    <li><a href="#">@Session["username"]</a></li>
                    <li><a href="~/Admin/ModifyPasswd">修改密码</a></li>
                    <li><a href="~/Admin/Logout">退出</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container clearfix">
        <div class="sidebar-wrap">
            <div class="sidebar-title">
                <h1>菜单</h1>
            </div>
            <div class="sidebar-content">
                <ul class="sidebar-list">
                    <li>
                        <a href="#"><i class="icon-font">&#xe003;</i>常用操作</a>
                        <ul class="sub-menu">
                            <li><a href="~/Article"><i class="icon-font">&#xe008;</i>文章管理</a></li>
                            <li><a href="~/Cate"><i class="icon-font">&#xe005;</i>分类管理</a></li>
                            <li><a href="~/Link"><i class="icon-font">&#xe004;</i>友情链接</a></li>
                            <li><a href="~/Admin"><i class="icon-font">&#xe012;</i>用户管理</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <!--/sidebar-->
        <div class="main-wrap">
            @RenderBody()
        </div>
</body>
</html>